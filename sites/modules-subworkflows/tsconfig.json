{
    "extends": "astro/tsconfigs/base",
    "include": [".astro/types.d.ts", "**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["../main-site/src/components/*"],
            "@layouts/*": ["../main-site/src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@public/*": ["public/*"],
            "@styles/*": ["../main-site/src/styles/*"],
            "@root/*": ["../../*"],
            "@main-site/*": ["../main-site/src/*"],
            "@utils/*": ["../main-site/utils/*"]
        },
        "strictNullChecks": true
    },
    "exclude": ["node_modules", "dist"]
}
